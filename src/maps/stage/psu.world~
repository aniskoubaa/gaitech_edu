include "turtlebot.inc"

define floorplan model
(
  # sombre, sensible, artistic
  color "gray30"

  # most maps will need a bounding box
  boundary 1

  gui_nose 0
  gui_grid 0
  gui_outline 0
  gripper_return 0
  fiducial_return 0
  laser_return 1
)

resolution 0.02
interval_sim 100  # simulation timestep in milliseconds

window
(
  size [ 600 700 0.0 ]
  center [ 0.0 0.0 ]
  rotate [ 0.0 0.0 ]
  scale 50
)

floorplan
(
  name "psu"
  bitmap "../psu.pgm"
  size [ 41.85 23.85 0.0 ] #the real size in meters (from yaml, resolution*pixels)
  pose [ 20.925 11.925 0.0 0.0 ]
)

# throw in a robot
turtlebot
(
  pose [20.925 11.925 0.0 0.0 ]
  name "turtlebot"
  color "red"
)
